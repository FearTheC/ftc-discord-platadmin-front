{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2015",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitReturns": true,      
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "allowJs": true,
    "lib": [ "es2015.promise", "dom", "es5" ]
  },
  "include": [
    "./src/**/*"
  ]
}
